<body>
    <div class="offline-container">
        <div class="offline-icon">
            <i class="fas fa-wifi"></i>
        </div>
        
        <h1>You're Offline</h1>
        <p class="offline-message">It looks like you've lost your internet connection. Don't worry, some features are still available offline.</p>
        
        <button class="retry-btn" onclick="retryConnection()">
            <i class="fas fa-redo"></i> Try Again
        </button>
        
        <div class="offline-features">
            <div class="feature">
                <i class="fas fa-check feature-icon"></i>
                View cached account information
            </div>
            <div class="feature">
                <i class="fas fa-check feature-icon"></i>
                Access previously loaded transactions
            </div>
            <div class="feature">
                <i class="fas fa-times feature-icon" style="color: #dc3545;"></i>
                Make new transactions (requires internet)
            </div>
        </div>
    </div>

    <script>
        function retryConnection() {
            if (navigator.onLine) {
                window.location.reload();
            } else {
                // Show retry animation
                const btn = document.querySelector('.retry-btn');
                btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Checking...';
                
                setTimeout(() => {
                    if (navigator.onLine) {
                        window.location.reload();
                    } else {
                        btn.innerHTML = '<i class="fas fa-redo"></i> Try Again';
                    }
                }, 2000);
            }
        }
        
        // Listen for online event
        window.addEventListener('online', () => {
            window.location.reload();
        });
        
        // Auto-retry every 30 seconds
        setInterval(() => {
            if (navigator.onLine) {
                window.location.reload();
            }
        }, 30000);
    </script>
